<UserControl x:Class="CoCEd.View.MiscPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:common="clr-namespace:CoCEd.Common"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/PageInclude.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="{x:Type TextBlock}" TargetType="{x:Type TextBlock}">
                <Setter Property="MinWidth" Value="160"/>
                <Setter Property="Padding" Value="0,4,0,4"/>
                <Setter Property="TextAlignment" Value="Right"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self},Path=IsEnabled}" Value="False">
                        <Setter Property="Foreground" Value="#C0C0C0"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <common:AutoGrid Grid.Column="1" Grid.Row="1">
                <TextBlock              Text="Exgartuan"/>
                <ComboBox SelectedIndex="{Binding Game.Exagartuan}">
                    <ComboBoxItem>Not possessed</ComboBoxItem>
                    <ComboBoxItem>Cock</ComboBoxItem>
                    <ComboBoxItem>Breasts</ComboBoxItem>
                </ComboBox>

                <TextBlock              Text="Worms"/>
                <ComboBox SelectedIndex="{Binding Game.WormStatus}">
                    <ComboBoxItem>Disabled</ComboBoxItem>
                    <ComboBoxItem>Enabled</ComboBoxItem>
                    <ComboBoxItem>Infested</ComboBoxItem>
                </ComboBox>

                <TextBlock              Text="Addiction: minotaur cum"/>
                <common:MyNumericBox    Value="{Binding Game.MinotaurCumAddiction}" Min="0" Max="120" IsInteger="True"/>

                <TextBlock              Text="Addiction: marble milk" IsEnabled="{Binding HasMetMarble}"/>
                <common:MyNumericBox    Value="{Binding Game.MarbleMilkAddiction}" Min="0" Max="120" IsInteger="True" IsEnabled="{Binding Game.HasMetMarble}"/>
            </common:AutoGrid>

            <StackPanel Grid.Column="3" Grid.Row="1" Orientation="Vertical">
                <Border Style="{StaticResource HeaderBorder}">
                    <TextBlock Text="Procreation" Style="{StaticResource Header}" />
                </Border>
                <common:AutoGrid>
                    <TextBlock              Text="Fertility"/>
                    <common:MyNumericBox    Value="{Binding Game.Fertility}" Min="0" Max="100" IsInteger="True"/>
                </common:AutoGrid>

                <common:AutoGrid Margin="0,30">
                    <TextBlock              Text="Pregnancy"/>
                    <common:MyComboBox SelectedValue="{Binding Game.PregnancyType}" ItemsSource="{Binding Data.Body.PregnancyTypes}"/>

                    <TextBlock              Text="Time remaining*" IsEnabled="{Binding Game.IsPregnancyEnabled}" ToolTip="A virgin vagina will put pregnancy on hold. With the diapause perk it will only progress when you absorb fluids."/>
                    <common:MyNumericBox    Value="{Binding Game.PregnancyTime}" Min="0" IsInteger="True" Unit="hours" IsEnabled="{Binding Game.IsPregnancyEnabled}"/>

                    <TextBlock              Text="Butt pregnancy"/>
                    <common:MyComboBox SelectedValue="{Binding Game.ButtPregnancyType}" ItemsSource="{Binding Data.Body.AnalPregnancyTypes}"/>

                    <TextBlock              Text="Time remaining*" IsEnabled="{Binding Game.IsButtPregnancyEnabled}" ToolTip="With the diapause perk it will only progress when you absorb fluids."/>
                    <common:MyNumericBox    Value="{Binding Game.ButtPregnancyTime}" Min="0" IsInteger="True" Unit="hours" IsEnabled="{Binding Game.IsButtPregnancyEnabled}"/>
                </common:AutoGrid>

                <common:AutoGrid Margin="0,15">
                    <TextBlock              Text="Birthed Tamani children*" IsEnabled="{Binding Game.HasMetTamani}" ToolTip="After 24 daughters, enables a new encounter whose level is a factor of the total number."/>
                    <common:MyNumericBox    Value="{Binding Game.BirthedTamaniChildren}" Min="0" IsInteger="True" IsEnabled="{Binding Game.HasMetTamani}"/>

                    <TextBlock              Text="Birthed adult minotaurs*" ToolTip="Affects encounters in the mountain. Past 25 children the minotaur gangbang bad ending is triggered for addicted players in need of minotaur cum."/>
                    <common:MyNumericBox    Value="{Binding Game.BirthedMinotaurs}" Min="0" IsInteger="True"/>

                    <TextBlock              Text="Birthed imps*" ToolTip="Affects the probability of imp gangbang rape at night."/>
                    <common:MyNumericBox    Value="{Binding Game.BirthedImps}" Min="0" IsInteger="True"/>
                </common:AutoGrid>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
