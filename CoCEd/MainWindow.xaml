<Window x:Class="CoCEd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:common="clr-namespace:CoCEd.Common" 
        xmlns:view="clr-namespace:CoCEd.View" 
        xmlns:vm="clr-namespace:CoCEd.ViewModel" 
        Title="CoCEd" 
        DataContext="{x:Static vm:VM.Instance}"
        Width="1024" Height="736" MinWidth="1024" MinHeight="500">
    
    <Window.Resources>
        <Style x:Key="{x:Type TabItem}" TargetType="{x:Type TabItem}">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border x:Name="root" BorderThickness="0" BorderBrush="#808080" SnapsToDevicePixels="True" Margin="{TemplateBinding Padding}">
                            <TextBlock x:Name="text" Text="{TemplateBinding Header}" Foreground="#E0E0E0" FontSize="16" HorizontalAlignment="Center" Margin="30,8,30,12"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="text" Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="text" Property="Foreground" Value="#DA3100"/>
                                <Setter TargetName="root" Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Border HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="45">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="#404040"/>
                    <GradientStop Offset="1" Color="#303030"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <TabControl Margin="0,-2,0,0" IsEnabled="{Binding HasData}" Padding="0" BorderThickness="0">
            <TabItem Header="General" Padding="20,0,0,0">
                <view:GeneralPage Background="White"/>
            </TabItem>
            <TabItem Header="Body">
                <view:BodyPage Background="White"/>
            </TabItem>
            <TabItem Header="Genitals">
                <view:GenitalsPage Background="White"/>
            </TabItem>
            <TabItem Header="Perks">
                <view:PerkPage Background="White"/>
            </TabItem>
            <TabItem Header="Items">
                <view:ItemPage Background="White"/>
            </TabItem>
            <TabItem Header="Others">
                <view:MiscPage Background="White"/>
            </TabItem>
            <TabItem Header="Raw data">
                <view:RawPage Background="White"/>
            </TabItem>
        </TabControl>

        <view:TopBar HorizontalAlignment="Stretch" Margin="0,9,5,0"/>

        <TextBlock Text="0.9e" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,43,5,0" Foreground="#A0A0A0" FontSize="12"/>
    </Grid>
</Window>
